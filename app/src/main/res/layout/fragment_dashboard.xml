<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_dashboard"
    android:background="@drawable/login_background_gradient"
    tools:context=".DashboardFragment">

    <!-- Modern Header with Gradient -->
    <androidx.cardview.widget.CardView
        android:id="@+id/header_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dashboard_header_gradient"
            android:orientation="vertical"
            android:padding="24dp"
            android:paddingBottom="32dp">

            <!-- Header Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Dashboard Icon -->
                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_dashboard"
                        app:tint="@color/primary_green" />

                </androidx.cardview.widget.CardView>

                <!-- Header Text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dash_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="Dashboard"
                        android:textColor="@color/text_white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dash_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:alpha="0.9"
                        android:text="VisÃ£o geral do seu negÃ³cio"
                        android:textColor="@color/text_white"
                        android:textSize="14sp" />

                </LinearLayout>

                

            </LinearLayout>

            <TextView
                android:id="@+id/welcome_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:alpha="0.9"
                android:text="Bem-vindo de volta! ðŸ‘‹"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Swipe Refresh Layout -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/dashboard_swipe_refresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_card">

        <!-- Scroll Content -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Performance Metrics Grid -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="ðŸ“Š MÃ©tricas de Desempenho"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- First Row - Leads and Conversions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <!-- Total Leads Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/metric_card_leads"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <!-- Icon Container -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:layout_marginBottom="12dp"
                                app:cardCornerRadius="22dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#E0F2FE">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_trending_up"
                                    app:tint="#0284C7" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total de Leads"
                                android:textColor="#0284C7"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/tv_total_leads"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="48"
                                android:textColor="#075985"
                                android:textSize="26sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-black" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Conversions Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/metric_card_conversions"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <!-- Icon Container -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:layout_marginBottom="12dp"
                                app:cardCornerRadius="22dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#DCFCE7">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_check_circle"
                                    app:tint="#16A34A" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ConversÃµes"
                                android:textColor="#16A34A"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/tv_convertidos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="12"
                                android:textColor="#15803D"
                                android:textSize="26sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-black" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Second Row - Percentage and Monthly -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:orientation="horizontal">

                    <!-- Conversion Rate Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/metric_card_percentage"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <!-- Icon Container -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:layout_marginBottom="12dp"
                                app:cardCornerRadius="22dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#F3E8FF">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_analytics"
                                    app:tint="#9333EA" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Taxa ConversÃ£o"
                                android:textColor="#9333EA"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/tv_taxa_conversao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="25%"
                                android:textColor="#7C3AED"
                                android:textSize="26sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-black" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Monthly Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/metric_card_monthly"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <!-- Icon Container -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:layout_marginBottom="12dp"
                                app:cardCornerRadius="22dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#FEF3C7">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_trending_up"
                                    app:tint="#D97706" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Este MÃªs"
                                android:textColor="#D97706"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/tv_este_mes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="8"
                                android:textColor="#C2410C"
                                android:textSize="26sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-black" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Chart Section -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/dash_pie_chart_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/background_white"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Chart Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_analytics"
                                app:tint="@color/primary_green" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-medium"
                                android:text="ðŸ“ˆ Leads por Consultor"
                                android:textColor="@color/text_primary"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Chart Container Moderno -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/chart_background">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@drawable/chart_container_background"
                                android:padding="20dp">

                                <com.github.mikephil.charting.charts.PieChart
                                    android:id="@+id/dash_pie_chart"
                                    android:layout_width="match_parent"
                                    android:layout_height="320dp"
                                    android:layout_margin="8dp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Quick Actions Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="âš¡ AÃ§Ãµes RÃ¡pidas"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/dash_action_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:orientation="horizontal">

                    <!-- Metrics Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/dash_btn_metricas"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/action_button_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="metricasDaEquipe"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginBottom="8dp"
                                android:src="@drawable/ic_analytics"
                                app:tint="@color/primary_green" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Equipe"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Funnel Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/dash_btn_funil"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/action_button_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="funil_cap"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginBottom="8dp"
                                android:src="@drawable/ic_funnel"
                                app:tint="@color/primary_green" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Funil de ConversÃ£o"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Recent Leads Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_trending_up"
                        app:tint="@color/primary_green" />

                    <TextView
                        android:id="@+id/dash_recent_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="ðŸ•’ Leads Recentes"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Recent Leads Container -->
                <LinearLayout
                    android:id="@+id/dash_scroll_linear2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="24dp">

                    <!-- Os cards de leads serÃ£o adicionados dinamicamente aqui -->

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 