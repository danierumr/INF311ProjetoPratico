<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Logo do aplicativo -->
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo_rubeus"
        android:contentDescription="Logo Rubeus"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true" />

    <!-- Nome do aplicativo -->
    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="CaptaMax"
        android:textColor="@color/text_black"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Sistema de CRM Educacional"
        android:textColor="@color/text_black"
        android:textSize="16sp"
        android:alpha="0.9" />

    <!-- Indicador de carregamento -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_subtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:indeterminateTint="@color/primary_green" />

    <!-- Informações de versão (opcional) -->
    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:text="v1.0"
        android:textColor="@color/text_black"
        android:textSize="12sp"
        android:alpha="0.7" />

</RelativeLayout> 