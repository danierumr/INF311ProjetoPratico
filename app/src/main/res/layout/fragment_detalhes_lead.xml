<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_detalhes_lead"
    android:background="@color/background_gray_light"
    tools:context=".DetalhesLeadFragment">

    <!-- Header Section - Seguindo padrÃ£o do dashboard -->
    <RelativeLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_green"
        android:paddingVertical="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dlead_title"
            android:id="@+id/detalhes_lead_title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/text_white"
            android:gravity="start" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visualize todas as informaÃ§Ãµes do lead"
            android:id="@+id/detalhes_lead_subtitle"
            android:textSize="14sp"
            android:textColor="@color/text_white"
            android:alpha="0.8"
            android:gravity="start"
            android:layout_below="@+id/detalhes_lead_title"
            android:layout_marginTop="4dp" />

    </RelativeLayout>

    <!-- Scroll Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_section"
        android:background="@color/background_gray_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Lead Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                android:background="@color/background_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¤ InformaÃ§Ãµes do Lead"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/detalhes_lead_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nome do Lead"
                        android:textSize="20sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/detalhes_lead_escola"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Escola â€¢ SÃ©rie"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="16dp" />

                    <!-- Status Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dlead_estagio"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/detalhes_lead_estagio_edit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Novo"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dlead_prioridade"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/detalhes_lead_prioridade_edit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Normal"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Contact Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                android:background="@color/background_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dlead_informacoes_cont"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- ResponsÃ¡vel -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dlead_responsavel"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/detalhes_lead_resp_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nome do ResponsÃ¡vel"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dlead_email"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/detalhes_lead_email_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="email@exemplo.com"
                            android:textSize="16sp"
                            android:textColor="@color/primary_green"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Telefone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dlead_tel"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/detalhes_lead_tel_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(11) 99999-9999"
                            android:textSize="16sp"
                            android:textColor="@color/primary_green"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Interesse -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dlead_interesse"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/detalhes_lead_interesse_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MatrÃ­cula imediata"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <!-- Ãšltimo Contato -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dlead_ult_cont"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/detalhes_lead_ult_cont_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HÃ¡ 2 horas"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ObservaÃ§Ãµes Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                android:background="@color/background_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dlead_ult_observacoes"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/detalhes_lead_obser_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ObservaÃ§Ãµes sobre o lead aparecerÃ£o aqui..."
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- HistÃ³rico Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                android:background="@color/background_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dlead_hist"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/detalhes_lead_btn"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/dlead_regist_at"
                        android:textColor="@color/text_white"
                        android:background="@drawable/button_primary"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout> 