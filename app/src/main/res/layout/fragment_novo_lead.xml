<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_novo_lead"
    android:background="@color/background_gray_light"
    tools:context=".NovoLeadFragment">

    <!-- Header Section - Seguindo padrão do dashboard -->
    <RelativeLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_green"
        android:paddingVertical="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/icon_novo_lead"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_input_add"
            android:tint="@color/text_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/icon_novo_lead"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastrar Novo Lead"
                android:id="@+id/novo_lead_title"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/text_white"
                android:gravity="start" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adicione um novo lead ao sistema"
                android:id="@+id/novo_lead_subtitle"
                android:textSize="14sp"
                android:textColor="@color/text_white"
                android:alpha="0.9"
                android:gravity="start"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </RelativeLayout>

    <!-- Scroll Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_section"
        android:background="@color/background_gray_light"
        android:scrollbars="vertical"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Informações Pessoais Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/background_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_edit"
                            android:tint="@color/primary_green"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Informações Pessoais"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Nome do Aluno -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/aluno_name"
                        app:boxStrokeColor="@color/primary_green"
                        app:hintTextColor="@color/primary_green"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:startIconDrawable="@android:drawable/ic_menu_edit"
                        app:startIconTint="@color/primary_green">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edittext_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName|textCapWords"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Escola Atual -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/escola_atual"
                        app:boxStrokeColor="@color/primary_green"
                        app:hintTextColor="@color/primary_green"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:startIconDrawable="@android:drawable/ic_dialog_map"
                        app:startIconTint="@color/primary_green">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edittext_escola"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Série -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/serie"
                        android:textSize="16sp"
                        android:textColor="@color/primary_green"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:drawableStart="@android:drawable/ic_menu_agenda"
                        android:drawableTint="@color/primary_green"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical" />

                    <Spinner
                        android:id="@+id/serie_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/spinner_background"
                        android:padding="16dp"
                        android:elevation="1dp" />

                    <!-- Nome do Responsável -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/nome_responsável"
                        app:boxStrokeColor="@color/primary_green"
                        app:hintTextColor="@color/primary_green"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:startIconDrawable="@android:drawable/ic_menu_my_calendar"
                        app:startIconTint="@color/primary_green">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edittext_nome_resp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName|textCapWords"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Informações de Contato Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/background_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_call"
                            android:tint="@color/primary_green"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Informações de Contato"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/email"
                        app:boxStrokeColor="@color/primary_green"
                        app:hintTextColor="@color/primary_green"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:startIconDrawable="@android:drawable/ic_dialog_email"
                        app:startIconTint="@color/primary_green">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edittext_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Telefone -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/tel"
                        app:boxStrokeColor="@color/primary_green"
                        app:hintTextColor="@color/primary_green"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:startIconDrawable="@android:drawable/ic_menu_call"
                        app:startIconTint="@color/primary_green">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edittext_tel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Detalhes do Interesse Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/background_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/btn_star"
                            android:tint="@color/primary_green"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Detalhes do Interesse"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Interesse -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/interesse"
                        android:textSize="16sp"
                        android:textColor="@color/primary_green"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:drawableStart="@android:drawable/btn_star"
                        android:drawableTint="@color/primary_green"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical" />

                    <Spinner
                        android:id="@+id/interesse_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/spinner_background"
                        android:padding="16dp"
                        android:elevation="1dp" />

                    <!-- Observações -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="@string/obser"
                        app:boxStrokeColor="@color/primary_green"
                        app:hintTextColor="@color/primary_green"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:startIconDrawable="@android:drawable/ic_menu_edit"
                        app:startIconTint="@color/primary_green">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edittext_observacoes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine|textCapSentences"
                            android:lines="4"
                            android:maxLines="6"
                            android:gravity="top|start"
                            android:textSize="16sp"
                            android:scrollbars="vertical"
                            android:hint="Adicione informações relevantes sobre o lead..." />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Buttons Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/background_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_cancelar"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        android:text="Cancelar"
                        android:textColor="@color/primary_green"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_outline"
                        android:drawableStart="@android:drawable/ic_menu_close_clear_cancel"
                        android:drawableTint="@color/primary_green"
                        android:drawablePadding="8dp"
                        android:gravity="center"
                        android:elevation="2dp"
                        style="?android:attr/borderlessButtonStyle" />

                    <Button
                        android:id="@+id/btn_salvar"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/salvar_lead"
                        android:textColor="@color/text_white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_primary"
                        android:drawableStart="@android:drawable/ic_menu_save"
                        android:drawableTint="@color/text_white"
                        android:drawablePadding="8dp"
                        android:gravity="center"
                        android:elevation="3dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout> 