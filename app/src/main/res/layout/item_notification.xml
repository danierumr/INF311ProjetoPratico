<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/card_notification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Indicador de prioridade -->
        <View
            android:id="@+id/priority_indicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:background="@color/primary_green"
            android:minHeight="60dp" />

        <!-- Ícone do tipo -->
        <ImageView
            android:id="@+id/iv_notification_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="top"
            android:src="@drawable/ic_notifications_none"
            android:tint="@color/primary_green"
            tools:src="@drawable/ic_notifications_none" />

        <!-- Conteúdo principal -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Linha superior: Título e Tempo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_notification_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Novo Lead Recebido" />

                <TextView
                    android:id="@+id/tv_notification_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="8dp"
                    tools:text="agora" />

            </LinearLayout>

            <!-- Corpo da notificação -->
            <TextView
                android:id="@+id/tv_notification_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                tools:text="Um novo lead foi cadastrado no sistema e precisa da sua atenção." />

            <!-- Linha inferior: Tipo e Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Badge do tipo -->
                <TextView
                    android:id="@+id/tv_notification_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/badge_type_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_green"
                    tools:text="Novo Lead" />

                <!-- Badge de prioridade -->
                <TextView
                    android:id="@+id/tv_notification_priority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/badge_priority_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    tools:text="ALTA" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Indicador de não lida -->
                <View
                    android:id="@+id/unread_indicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/circle_indicator"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <!-- Botão de ação -->
        <ImageView
            android:id="@+id/iv_notification_action"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_more_vert"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:tint="@color/text_secondary" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 