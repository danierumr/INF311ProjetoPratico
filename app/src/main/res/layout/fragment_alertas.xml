<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_alertas"
    android:background="@color/background_gray_light"
    tools:context=".AlertasFragment">

    <!-- Header Section -->
    <RelativeLayout
        android:id="@+id/alertas_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_green"
        android:paddingVertical="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alertas e Notificações"
            android:id="@+id/alertas_title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/text_white"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acompanhe suas notificações importantes"
            android:id="@+id/alertas_subtitle"
            android:textSize="14sp"
            android:textColor="@color/text_white"
            android:alpha="0.8"
            android:gravity="center"
            android:layout_below="@+id/alertas_title"
            android:layout_marginTop="4dp" />

    </RelativeLayout>

    <!-- Filtros -->
    <LinearLayout
        android:id="@+id/alertas_intervalo_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alertas_header"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/alertas_btn_todas"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/period_selector_active"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Todas"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <Button
            android:id="@+id/alertas_btn_alertas"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/period_selector_active"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Alertas"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/alertas_btn_oportunidades"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/period_selector_active"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Oportunidades"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- ScrollView com os conteúdos principais -->
    <ScrollView
        android:id="@+id/scrollView_alertas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/alertas_intervalo_select"
        android:paddingBottom="90dp"
        android:clipToPadding="false"
        android:background="@color/background_gray_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp">

            <!-- Alerta de Meta Atingida -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:background="@color/background_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/alert_card_background_green">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Meta atingida!"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agora"
                            android:textSize="12sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="end"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parabéns! Você atingiu 80% da meta mensal de captação."
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Alerta de Leads sem Acompanhamento -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:background="@color/background_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/alert_card_background_red">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Leads sem acompanhamento"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2h atrás"
                            android:textSize="12sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="end"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Existem 3 leads que não foram contatados há mais de 48 horas."
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Oportunidade de Conversão -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:background="@color/background_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/alert_card_background_blue">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oportunidade de conversão"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1h atrás"
                            android:textSize="12sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="end"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="João Silva demonstrou interesse em matrícula imediata."
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Alerta de Follow-up -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:background="@color/background_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/alert_card_background_orange">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Follow-up agendado"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30min"
                            android:textSize="12sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="end"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lembrete: Ligar para Ana Costa às 15:00."
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Relatório Semanal -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:background="@color/background_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Relatório semanal disponível"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ontem"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="end"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seu relatório de performance da semana está pronto para visualização."
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout> 