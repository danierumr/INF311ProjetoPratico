<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_alertas"
    android:background="@color/background_gray_light"
    tools:context=".AlertasFragment">

    <!-- Header Section -->
    <RelativeLayout
        android:id="@+id/alertas_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_green"
        android:paddingVertical="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alertas e Notificações"
            android:id="@+id/alertas_title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/text_white"
            android:layout_centerVertical="true" />

        <!-- Contador de não lidas -->
        <TextView
            android:id="@+id/tv_unread_count"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_red"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="5"
            tools:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acompanhe suas notificações importantes"
            android:id="@+id/alertas_subtitle"
            android:textSize="14sp"
            android:textColor="@color/text_white"
            android:alpha="0.8"
            android:layout_below="@+id/alertas_title"
            android:layout_marginTop="4dp" />

    </RelativeLayout>

    <!-- Filtros e Ações -->
    <LinearLayout
        android:id="@+id/alertas_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alertas_header"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Botões de Filtro -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/alertas_btn_todas"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/filter_button_selector"
                android:backgroundTint="@null"
                android:text="Todas"
                android:textColor="@color/filter_button_text_selector"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="6dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/alertas_btn_nao_lidas"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/filter_button_selector"
                android:backgroundTint="@null"
                android:text="Não Lidas"
                android:textColor="@color/filter_button_text_selector"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/alertas_btn_lidas"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/filter_button_selector"
                android:backgroundTint="@null"
                android:text="Lidas"
                android:textColor="@color/filter_button_text_selector"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="6dp"
                android:elevation="2dp" />

        </LinearLayout>

        <!-- Botões de Ação -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_mark_all_read"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingHorizontal="24dp"
                android:background="@drawable/button_outline"
                android:backgroundTint="@null"
                android:text="Marcar Todas como Lidas"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_check_all"
                android:drawablePadding="8dp"
                android:drawableTint="@color/primary_green" />

        </LinearLayout>

    </LinearLayout>

    <!-- SwipeRefreshLayout com RecyclerView -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_notifications"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/alertas_controls"
        android:layout_marginBottom="90dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- RecyclerView para as notificações -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_notifications"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:scrollbars="vertical"
                tools:listitem="@layout/item_notification" />

            <!-- Estado vazio -->
            <LinearLayout
                android:id="@+id/empty_state_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/ic_notifications_none"
                    android:tint="@color/text_secondary"
                    android:alpha="0.4" />

                <TextView
                    android:id="@+id/tv_empty_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Nenhuma notificação encontrada"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Você está em dia! Suas notificações importantes aparecerão aqui."
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout> 