<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Estado selecionado -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/primary_green"
                android:endColor="@color/verdeagua_dark"
                android:angle="45" />
            <corners android:radius="16dp" />
            <stroke 
                android:width="2dp"
                android:color="@color/accent_green" />
        </shape>
    </item>
    
    <!-- Estado pressionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E8F5F3" />
            <corners android:radius="16dp" />
            <stroke 
                android:width="2dp"
                android:color="@color/primary_green" />
        </shape>
    </item>
    
    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_elevated" />
            <corners android:radius="16dp" />
            <stroke 
                android:width="1dp"
                android:color="@color/divider_color" />
        </shape>
    </item>
    
</selector> 